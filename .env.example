# Application Configuration
APP_NAME=enterprise-agent-platform
APP_ENV=development
DEBUG=true
API_VERSION=v1
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://agent_user:agent_pass@postgres:5432/agent_db
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=50

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-at-least-32-chars-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
ENCRYPTION_KEY=your-encryption-key-32bytes!!

# LLM Service Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
LOCAL_MODEL_ENDPOINT=http://localhost:8080

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# Compliance
ENABLE_GDPR_COMPLIANCE=true
ENABLE_AUDIT_LOG=true
DATA_RETENTION_DAYS=90

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true